# DhanSetu Mobile App Configuration
# Copy this file to .env and update with your values

# DeshChain Configuration
DESHCHAIN_RPC_URL=https://rpc.deshchain.com
DESHCHAIN_API_URL=https://api.deshchain.com
DESHCHAIN_CHAIN_ID=deshchain-1
DESHCHAIN_EXPLORER_URL=https://explorer.deshchain.com

# App Configuration
APP_ENVIRONMENT=development
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1

# API Keys (Optional)
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_KEY=your_pinata_secret_key_here

# Analytics (Optional)
ANALYTICS_ENABLED=false
ANALYTICS_KEY=your_analytics_key_here

# Feature Flags
FEATURE_BIOMETRIC_AUTH=true
FEATURE_HARDWARE_WALLET=false
FEATURE_TESTNET_MODE=false

# Debug Settings
DEBUG_MODE=true
SHOW_DEVELOPER_MENU=true

# Cultural Configuration
DEFAULT_LANGUAGE=en
SHOW_FESTIVAL_THEMES=true
ENABLE_CULTURAL_QUOTES=true

# Security
SESSION_TIMEOUT_MINUTES=15
MAX_PIN_ATTEMPTS=3
ENABLE_SCREENSHOT_PROTECTION=true